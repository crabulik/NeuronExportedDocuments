@using NeuronExportedDocuments.Resources
@model NeuronExportedDocuments.Models.ViewModels.ConfirmDialogViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="@MainMessages.rs_Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">@Model.ConfirmCaption</h4>
</div>
@using (Html.BeginForm(Model.ConfirmRouteValueDictionary))
{
    <div class="modal-body">
        <p>@Model.ConfirmMessage</p>
        @Html.HiddenFor(m => m.BackUrl)
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">@MainMessages.rs_No</button>
        <button type="submit" class="btn btn-primary">@MainMessages.rs_Yes</button>
    </div>
}